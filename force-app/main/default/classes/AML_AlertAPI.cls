/**
* @Description This is REST Webservice Class for Alert Creation through GPO Layer
* @param RestContext.request: RestRequest for your Apex REST method 
* @return:  Instance of AlertResponseWrapper for custom response includes Alert Number, Status of Request, Error by SF
* 
*/

@RestResource(urlMapping='/createAlertAPI/*') 
global with sharing class AML_AlertAPI {
    
   @HttpPost
    global static AML_AlertResponseWrapper insertAlert(AML_AlertRequestWrapper alert_request) {
        AML_AlertResponseWrapper resp = AML_AlertUtilityClass.createAlert(alert_request);
        return resp;
        
    }
    global class AML_AlertRequestWrapper {
        global String alertCategoryCd;
        global DateTime alertDate; //alert creation date
        global String primaryEntityLevelCode;
        global String primaryEntityName; //name of customer
        global String alertSubcategoryCd;
        global String alertRuleName;
        global String alertTypeCd;
        global String description;
        global Long moneyLaunderingRisk;
        global String primaryEntityNumber;//Oracle Id
        global DateTime runDate;
        global Long terrorFinancingRisk;
        global String uniqueReferenceNumber; //unique id for alerts
        }
    
    global class AML_AlertResponseWrapper {
        global String alertId;// Name(Auto Number) generated by SF
        global String statusCode;
        global String errorMessage;
        }    
    
}